<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".activity.PLaylistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Playlist Image -->
        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:contentDescription="Playlist Image" />

        <!-- Playlist Title and Delete Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Playlist Title -->
            <TextView
                android:id="@+id/playlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jazz thư giãn"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentStart="true" />

            <!-- Delete Icon -->
            <ImageView
                android:id="@+id/img_delete_playlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete_forever"
                android:contentDescription="Delete Playlist"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#000000" />
        </RelativeLayout>

        <!-- Playlist Subtitle -->
        <TextView
            android:id="@+id/playlist_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THK Music"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- Playlist Year -->
        <TextView
            android:id="@+id/playlist_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024 • Playlist"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- Control Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play"
                app:tint="#000000"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/favorite_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Like"
                app:tint="#000000"
                android:layout_toEndOf="@id/play_button"
                android:layout_marginStart="16dp" />

            <ImageButton
                android:id="@+id/random_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/shuffle_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Shuffle"
                app:tint="#000000"
                android:layout_toEndOf="@id/like_button"
                android:layout_marginStart="16dp" />

            <ImageButton
                android:id="@+id/more_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="More"
                app:tint="#000000"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- Number of Songs -->
        <TextView
            android:id="@+id/song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52 bài hát"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_song_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"/>
    </LinearLayout>
</RelativeLayout>
